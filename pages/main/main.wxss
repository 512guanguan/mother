.swiper{
  padding: 1px;
}
.slide-image{
    width: 100%;
    height: 100%;
}

.menu_container{
  display: flex;
  width: 100%;
  background-color: #eee;
  padding: 1px;
}
.menu-item{
  width: 25%;
  text-align: center;
  background-color: #fff
}
.menu-item image{
	width: 100rpx;
	height: 100rpx;
  padding-top: 10rpx;
}
.menu-item text{
	display: block;
	font-size: 30rpx;
	line-height: 1.4;
	white-space: nowrap;
}
.sub_title{
  width: 100%;
  background-color:honeydew;
  padding-top: 3px;
  margin-top: 10rpx;
}
.sub_title_text{
  width: 100%;
  background-color:honeydew;
  border-left:10rpx solid red;
  padding-left: 15rpx;
  margin-top: 10rpx;
  text-align: left center;
  -webkit-text-fill-color: red
}